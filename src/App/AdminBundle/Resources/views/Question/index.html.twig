{% extends 'AppAdminBundle:Layout:admin_layout.html.twig' %}

{% block body -%}
   
   <section class="site-min-height">
              <!-- page start-->
              <section class="panel">
                  <header class="panel-heading">
                      Liste des questions
                  </header>
                  <div class="panel-body">
                      <div class="adv-table editable-table">
                          <div class="clearfix">
                             <a href="{{ path ('question_new', {'lang_id' : selectlangue.id}) }}">
                              <div class="btn-group">
                                  <button  class="btn green">
                                      Ajouter un nouvelle question <i class="fa fa-plus"></i>
                                  </button>
                              </div>
                             </a>
                           
                           <div class="btn-group pull-right">
                               <button class="btn dropdown-toggle" data-toggle="dropdown">Sélection de la langue : {{ selectlangue.libelle }}<i class="fa fa-angle-down"></i>
                               </button>
                               <ul class="dropdown-menu pull-right">
                                   {% for langue in langues %}
                                       <li><a href="{{ path('list_questions',{'lang_id' : langue.id})}}">{{ langue.libelle }}</a></li>
                                   {% endfor %}
                               </ul>
                           </div>
                          </div>
                          <br>
                          <div class="space15"></div>
                           <table class="table table-striped table-hover table-bordered" id="editable-sample">
                              <thead>
                              <tr>
                                 <th>Id</th>
                                 <th>Libellé</th>
                                 <th>Actions</th>
                              </tr>
                              </thead>
                              <tbody>
                              {% for question in questions %}
                                 <tr>
                                     <td><a href="{{ path('user_show2', { 'id': question.id }) }}">{{ question.id }}</a></td>
                                     <td>{{ question.libelle }}</td>

                                     <td class="center">
                                        <div class="hidden-phon">
                                             <a class="btn btn-success btn-sm" href="{{ path('question_show', { 'id': question.id }) }}"><i class="fa fa-eye"></i></a>
                                             <a class="btn btn-primary btn-sm" href="{{ path('question_edit', { 'id': question.id }) }}"><i class="fa fa-pencil"></i></a>
                                             <a class="btn btn-danger btn-sm" href="#"><i class="fa fa-trash-o "></i></a>
                                         </div>
                                               
                                     </td>
                                 </tr>
                              {% endfor %}
                              </tbody>
                          </table>
                      </div>
                  </div>
              </section>
              <!-- page end-->
          </section>
   
    {% endblock %}
